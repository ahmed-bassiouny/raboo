<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FCCF9"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginStart="20dp"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:src="@drawable/bluetooth" />


    <TextView
        android:id="@+id/charging_discharging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/battery_level_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="SMART CHARGING"
        android:textColor="#fff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/battery_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charging_discharging"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/shape" />

    <ImageView
        android:id="@+id/battery_level_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/battery" />


    <View
        android:id="@+id/batter_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/battery_level_image"
        android:layout_alignEnd="@+id/battery_level_image"
        android:layout_alignStart="@+id/battery_level_image"
        android:layout_alignTop="@+id/battery_level_image"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/battery_empty" />

    <View
        android:id="@+id/batter_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/battery_level_image"
        android:layout_alignEnd="@+id/battery_level_image"
        android:layout_alignStart="@+id/battery_level_image"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/battery_full"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/setting"
            android:drawableTop="@drawable/ic_settings"
            android:text="@string/setting"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/help"
            android:drawableTop="@drawable/ic_help_outline"
            android:text="Help"
            android:textColor="#fff" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/exit"
            android:drawableTop="@drawable/exit"
            android:text="Exit"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>